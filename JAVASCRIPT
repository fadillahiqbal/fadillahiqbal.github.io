document.addEventListener("DOMContentLoaded", function () {
    var showDialogBtn = document.getElementById("showDialogBtn");
    var closeDialogBtn = document.getElementById("closeDialogBtn");
    var customDialog = document.getElementById("customDialog");

    showDialogBtn.addEventListener("click", function () {
        customDialog.style.display = "block";
    });

    closeDialogBtn.addEventListener("click", function () {
        customDialog.style.display = "none";
    });
});
